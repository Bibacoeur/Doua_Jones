<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Doua Jones</name>
    <description>
        Application Doua Jones de la Bibliothèque Marie Curie
    </description>
    <content src="index.html" />
    <access origin="*" />
	<!-- SplashScreen -->
	<plugin name="SplashScreen" value="org.apache.cordova.SplashScreen"/>
	<feature name="SplashScreen">
    	<param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
		<param name="ios-package" value="CDVSplashScreen" />
	</feature>

	<gap:splash src="img/splash/splash.png" />
	<gap:splash src="img/splash/splash.png" gap:platform="android" gap:density="ldpi" /> <!-- 200x320 -->
    <gap:splash src="img/splash/splash.png" gap:platform="android" gap:density="mdpi" /> <!-- 320x480 -->
    <gap:splash src="img/splash/splash.png" gap:platform="android" gap:density="hdpi" /> <!-- 480x800 -->
    <gap:splash src="img/splash/splash.png" gap:platform="android" gap:density="xhdpi" /> <!-- 720x1280 -->
	
	<gap:splash src="splash/ios/splash.png"                 gap:platform="ios" width="320"  height="480"  />
    <gap:splash src="splash/ios/splash.png"           gap:platform="ios" width="640"  height="960"  />
    <gap:splash src="splash/ios/splash.png"         gap:platform="ios" width="640"  height="1136" />
    <gap:splash src="splash/ios/splash.png"       gap:platform="ios" width="1024" height="748"  />
    <gap:splash src="splash/ios/splash.png"        gap:platform="ios" width="768"  height="1004" />
    <!-- retina iPad -->
    <gap:splash src="splash/ios/splash.png" gap:platform="ios" width="2048" height="1496" />
    <gap:splash src="splash/ios/splash.png"  gap:platform="ios" width="1536" height="2008" />

	
	<preference name="show-splash-screen-spinner" value="false" />
	<preference name="splashscreen" value="splash" />
   	<preference name="auto-hide-splash-screen" value="false" /> 
	<preference name="SplashScreenDelay" value="8000" /> 
	<preference name="splash-screen-duration" value="8000" />
	
	<!-- Géolocalisation -->
	<feature name="http://api.phonegap.com/1.0/device"/><feature name="http://api.phonegap.com/1.0/geolocation"/><feature name="http://api.phonegap.com/1.0/network"/>
	<plugin name="Geolocation" value="org.apache.cordova.GeoBroker" />

	<!-- Icone -->
	<icon src="img/icon.png" />
	
	<!-- Norification -->
	<plugin name="Notification" value="org.apache.cordova.Notification"/>
	<gap:plugin name="com.phonegap.plugins.pushplugin" />
	
	<!-- Device -->
	<plugin name="Device" value="CDVDevice" />
	<feature name="Device">
    	<param name="android-package" value="org.apache.cordova.Device" />
	</feature>
	
	<!-- Back button -->
	<plugin name="App" value="com.phonegap.App"/>
	<feature name="App">
        <param name="android-package" value="org.apache.cordova.App" />
    </feature>
	
	<!-- Ios remove control bar -->
	<gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance" overwrite="true">
    	<false/>
	</gap:config-file>
	<!--<preference name="fullscreen" value="true" />-->
	

	
</widget>


